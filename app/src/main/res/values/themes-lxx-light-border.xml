        <item name="android:background">@drawable/keyboard_background_lxx_light_border</item>
        <item name="keyBackground">@drawable/btn_keyboard_key_lxx_light_border</item>
        <item name="functionalKeyBackground">@drawable/btn_keyboard_key_functional_lxx_light_border</item>
    </style>

    <style
        name="MoreKeysKeyboardView.LXX_Light_Border"
        parent="MoreKeysKeyboardView.LXX_Light">
        <item name="android:background">@drawable/keyboard_popup_panel_background_lxx_light_border</item>
        <item name="keyBackground">@drawable/btn_keyboard_key_popup_lxx_light</item>
    </style>

    <style
        name="SuggestionStripView.LXX_Light_Border"
        parent="SuggestionStripView.LXX_Light">
        <item name="android:background">@drawable/keyboard_suggest_strip_lxx_light_border</item>
